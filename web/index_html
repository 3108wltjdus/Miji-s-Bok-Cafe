  <div id="ingredients" class="ingredients"></div>

<script>
  function showMenu(type) {
    document.getElementById("drinkMenu").style.display = "none";
    document.getElementById("dessertMenu").style.display = "none";
    document.getElementById("ingredients").innerHTML = "";

    document.getElementById("drinkTab").classList.remove("active");
    document.getElementById("dessertTab").classList.remove("active");

    if (type === "drink") {
      document.getElementById("drinkMenu").style.display = "block";
      document.getElementById("drinkTab").classList.add("active");
    } else {
      document.getElementById("dessertMenu").style.display = "block";
      document.getElementById("dessertTab").classList.add("active");
    }
  }

  function showIngredients(name, text) {
    document.getElementById("ingredients").innerHTML =
      `<strong>${name}</strong><br>ì¬ë£Œ: ${text}`;
  }

  showMenu("drink");
</script>

